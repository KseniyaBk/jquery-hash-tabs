block content
	section#examples
		h1 Examples
		section#simple-example
			h1 Simple
			div.example
				div.example1
					- tabs = []
					- for (var i = 0; i < 4; i++) {
						- tabs.push({title: "Tab " + (i + 1), url: "tab" + (i + 1), content: "This is content for tab " + (i + 1)})
					- }
					+hashTabsWithContainer(tabs)
			div.code
				pre
					code.
						$example1 = $(".example1").hashTabs()
		section#smooth-scrolling-example
			h1 Smooth Scrolling
			p Allow
				em smooth scrolling
				| on the tabs.  This is great for when you want to programmatically select a tab, and then show this to the user.
			div.example
				div.example2
					- tabs2 = [{title: "Smooth", url: "tab1", content: "It's smooth time.  Check out how smooth scrolling makes the experience nicer."}, {title: "Cream Cheese", url: "tab2", content: "Bagels are awesome.  But in other countries outside North America, the concept of the 'bagel' is not very well-known."}, {title: "Milk", url: "tab3", content: "Milk may taste good.  But recent studies are finding that consuming more than 1 cup a day may cause serious risk for heart disease."}]
					+hashTabsWithContainer(tabs2)
				div.code
					pre
						code.
							$example2 = $(".example2").hashTabs({
								smoothScroll:
									enabled: on
							})
